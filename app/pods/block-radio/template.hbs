<fieldset>
<legend><h2>{{entry.block.label}}</h2></legend>

{{#if entry.block.note}}
  <p class="note">{{sanitize-html entry.block.note}}</p>
{{/if}}

{{#each entry.block.options as |option index|}}
  <label>
    {{radio-button value=option.value groupValue=entry.value name=(object-guid entry)}}
    {{option.label}}
    {{#if option.note}}&mdash; {{sanitize-html option.note}}{{/if}}
  </label>
{{/each}}
</fieldset>

{{entry-error-messages entry=entry}}
