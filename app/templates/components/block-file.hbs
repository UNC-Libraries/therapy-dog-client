<label>{{entry.block.label}}</label>

<div class="upload">
  {{#if entry.value}}
    {{entry.value.name}} <button {{action "clear"}}>Clear</button>
  {{else if progress}}
    Uploading… ({{progress.loaded}}/{{progress.total}})
  {{else}}
    <button>Choose File…</button>
    <input type="file" onchange={{action "select" value="target.files"}}>
  {{/if}}
</div>
