  "templates": [
    {
      "id": "article",
      "type": "xml",
      "template": "element 'mods' xmlns='http://www.loc.gov/mods/v3' @compact=true { info.title -> (element 'titleInfo') (element 'title'); element 'originInfo' { info.pubdate -> element 'dateIssued'; info.version -> element 'edition'; } element 'originInfo' eventType='publisher' { publisher -> element 'publisher'; element 'place' { location -> element 'placeTerm' type='text'; } } info.keywords -> (element 'note' displayLabel='Keywords'); element 'language' { languages -> element 'languageTerm' type='text'; } each authors as |author| { element 'name' { author.first -> element 'namePart' type='given'; author.last -> element 'namePart' type='family'; } } }"
    },

    {
      "id": "access",
      "type": "xml",
      "template": "element 'acl:accessControl' xmlns:acl='http://cdr.unc.edu/definitions/acl' acl:published='false';"
    },

    {
      "id": "supplemental",
      "type": "xml",
      "template": "element 'mods' xmlns='http://www.loc.gov/mods/v3' @compact=true { s.description -> element 'abstract'; }"
    }
  ],
  
  "bundle": "item type='Aggregate Work' label=info.title { link rel='http://cdr.unc.edu/definitions/1.0/base-model.xml#defaultWebObject' href='#article'; metadata type='descriptive' { partial 'article'; } metadata type='access-control' { partial 'access'; } item type='File' fragment='article' label=article.name { file { article; } } each supplemental as |s| { if s.file { item type='File' label=s.file.name { metadata { partial 'supplemental'; } file { s.file; } } } } }"
