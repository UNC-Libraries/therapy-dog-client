{
  "title": "Carolina Open Access",
  "description": "The Carolina Digital Repository supports the UNC Open Access Policy. UNC faculty, or their delegates, and other members of the UNC scholarly community should use this form to deposit scholarly work into the UNC Scholarly Works for preservation and access. For help, contact us or view our help pages.",

  "children": [
    {
      "key": "authors",
      "type": "section",
      "label": "Author Information",
      "children": [
        {
          "key": "first",
          "type": "text",
          "label": "First Name",
          "required": true
        },
        {
          "key": "last",
          "type": "text",
          "label": "Last Name",
          "required": true
        },
        {
          "key": "department",
          "type": "text",
          "label": "Academic Department",
          "required": true
        },
        {
          "key": "status",
          "type": "select",
          "label": "Status",
          "options": ["Faculty", "Student", "Staff", "Post-Doctoral"]
        }
      ]
    },
    
    {
      "key": "coauthors",
      "type": "section",
      "label": "Co-Authors",
      "repeat": true,
      "children": [
        {
          "key": "first",
          "type": "text",
          "label": "First Name",
          "required": true
        },
        {
          "key": "last",
          "type": "text",
          "label": "Last Name",
          "required": true
        }
      ]
    },

    {
      "key": "info",
      "type": "section",
      "label": "Article Information",
      "children": [
        {
          "key": "title",
          "type": "text",
          "label": "Title",
          "required": true
        },
        {
          "key": "publication",
          "type": "text",
          "label": "Publication",
          "placeholder": "i.e., Name of journal"
        },
        {
          "key": "issue",
          "type": "text",
          "label": "Issue",
          "placeholder": "e.g., Volume 11, Issue 2"
        },
        {
          "key": "pubdate",
          "type": "text",
          "label": "Publication Date"
        },
        {
          "key": "keywords",
          "type": "text",
          "label": "Keywords",
          "placeholder": "e.g., Cognition, 20th Century British Literature, Ovid, Morphology"
        },
        {
          "key": "version",
          "type": "select",
          "label": "Version",
          "options": [
            "Preprint",
            "Postprint",
            "Publisher"
          ]
        }
      ]
    },
    
    {
      "key": "embargo",
      "type": "date",
      "label": "Embargo Until"
    },
    
    {
      "key": "granting-agency-info",
      "type": "section",
      "label": "Granting Agency Information",
      "children": [
        {
          "key": "granting-agency",
          "type": "text",
          "label": "Granting Agency"
        },
        {
          "key": "additional-funding",
          "type": "text",
          "label": "Additional funding source(s) if applicable"
        }
      ]
    },

    {
      "key": "article",
      "type": "file",
      "label": "Article",
      "required": true
    },

    {
      "key": "supplemental",
      "type": "section",
      "label": "Supplemental Files",
      "children": [
        {
          "key": "file1",
          "type": "file"
        },
        {
          "key": "file2",
          "type": "file"
        },
        {
          "key": "file3",
          "type": "file"
        }
      ]
    }
  ],

  "bundle": "item kind='Aggregate Work' label=info.title { link rel='http://cdr.unc.edu/definitions/1.0/base-model.xml#defaultWebObject' href='#article'; item type='File' fragment='article' label=article.name { file { article } }; item type='File' label=supplemental.file1.name { file { supplemental.file1 } }; item type='File' label=supplemental.file2.name { file { supplemental.file2 } }; item type='File' label=supplemental.file3.name { file { supplemental.file3 } } }",
  
  "templates": []
}
