<h2>{{entry.block.label}}</h2>

{{#each entry.block.options as |option index|}}
  {{#if option.value}}
    <label>
      {{radio-button value=option.value groupValue=entry.value name=(object-guid entry)}}
      {{option.label}}
    </label>
  {{else}}
    <label>
      {{radio-button value=option groupValue=entry.value name=(object-guid entry)}}
      {{option}}
    </label>
  {{/if}}
{{/each}}
{{#if entry.block.allowBlank}}
  <label class="blank">
    {{radio-button value="" groupValue=entry.value name=(object-guid entry)}}
    No response
  </label>
{{/if}}

{{entry-error-messages entry=entry}}
