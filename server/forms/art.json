{
  "title": "Art MFA",
  
  "children": [
    {
      "key": "author",
      "type": "section",
      "label": "Author Information",
      "children": [
        { "key": "first", "type": "text", "label": "First Name", "required": true },
        { "key": "last", "type": "text", "label": "Last Name", "required": true },
        { "key": "graduation", "type": "select", "label": "Graduation Semester", "options": ["Summer 2015", "Fall 2015"] }
      ]
    },
      
    {
      "key": "info",
      "type": "section",
      "label": "Paper Information",
      "children": [
        { "key": "title", "type": "text", "label": "Title", "required": true },
        { "key": "submitted", "type": "select", "label": "Date Submitted", "options": ["Summer 2015", "Fall 2015"] }
      ]
    },
      
    {
      "key": "committee-chair",
      "type": "section",
      "label": "Chair of Thesis Committee",
      "children": [
        { "key": "first", "type": "text", "label": "First Name", "required": true },
        { "key": "last", "type": "text", "label": "Last Name", "required": true }
      ]
    },
      
    {
      "key": "committee-members",
      "type": "section",
      "label": "Thesis Committee Members",
      "repeat": true,
      "children": [
        { "key": "first", "type": "text", "label": "First Name", "required": true },
        { "key": "last", "type": "text", "label": "Last Name", "required": true }
      ]
    },
      
    {
      "key": "access-conditions",
      "type": "select",
      "label": "Access Conditions",
      "options": [ "Unrestricted", "Restricted" ]
    },
    
    {
      "key": "thesis",
      "type": "file",
      "label": "Thesis",
      "required": true
    },
    
    {
      "key": "samples",
      "type": "section",
      "label": "Work Samples",
      "repeat": true,
      "multipleFilesBlock": "sample",
      "children": [
        { "key": "file", "type": "file", "label": "Work Sample", "required": true },
        { "key": "title", "type": "text", "label": "Title", "required": true },
        { "key": "medium", "type": "text", "label": "Medium/Materials", "required": true },
        { "key": "dimensions", "type": "text", "label": "Dimensions", "required": true },
        { "key": "year", "type": "date", "label": "Year", "precision": "year", "required": true },
        { "key": "narrative", "type": "text", "label": "Brief Narrative" }
      ]
    }
  ],
  
  "bundle": "item kind='Aggregate Work' label=info.title { link rel='http://cdr.unc.edu/definitions/1.0/base-model.xml#defaultWebObject' href='#thesis'; item type='File' fragment='thesis' label=info.title { file { thesis; } } each samples as |sample| { item type='File' label=sample.title { file { sample.file; } } } }",
  
  "templates": []
}
