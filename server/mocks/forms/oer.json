{
  "title": "Open Educational Resources",

  "blocks": [
    {
      "id": "institutional-authors",
      "type": "section",
      "title": "Institutional Authors",
      "repeat": true,
      "children": [
        { "id": "institution-name", "type": "text", "label": "Institution Name", "required": true }
      ]
    },
    
    {
      "id": "keywords",
      "type": "section",
      "label": "Keywords",
      "repeat": true,
      "children": [
        { "id": "keyword", "type": "text", "label": "Keyword", "required": true }
      ]
    },
    
    {
      "id": "subject-areas",
      "type": "section",
      "label": "Subject Areas",
      "repeat": true,
      "children": [
        { "id": "subject-area", "type": "select", "label": "Subject Area", "required": true, "options": ["Arts", "Sciences"] }
      ]
    },
    
    {
      "id": "primary-users",
      "type": "section",
      "label": "Primary Users",
      "repeat": true,
      "children": [
        { "id": "primary-user", "type": "select", "label": "Primary User", "options": ["Student", "Faculty"] }
      ]
    },
    
    {
      "id": "resource-information",
      "type": "section",
      "title": "Resource Information",
      "children": [
        { "id": "level", "type": "select", "label": "Level", "options" : ["College/Upper Division"] },
        { "id": "type", "type": "select", "label": "Type of Resource", "options": ["Sound recording"] },
        { "id": "braille", "type": "checkbox", "label": "Is this a braille resource?" },
        { "id": "language", "type": "select", "label": "Language", "vocabulary": "iso639-2", "labelPath": "name", "valuePath": "code", "defaultValue": "eng" },
        { "id": "region", "type": "select", "label": "Intended Regional Relevance", "allowBlank": true, "options" : ["Africa"] }
      ]
    },
    
    {
      "id": "license-and-conditions",
      "type": "section",
      "label": "License and Conditions of Use",
      "children": [
        { "id": "cc-license", "type": "select", "label": "Creative Commons License", "options": ["CC BY", "CC BY-NC"], "defaultValue": "CC BY", "required": true },
        { "id": "holder", "type": "text", "label": "License/Copyright Holder", "required": true }
      ]
    },
    
    { "id": "file-for-deposit", "type": "file", "label": "File for Deposit", "required": true },
    
    {
      "id": "supplemental-files",
      "type": "section",
      "title": "Supplemental Files",
      "repeat": true,
      "multipleFilesBlock": "supplemental-file",
      "children": [
        { "id": "supplemental-file", "type": "file", "label": "Supplemental File", "required": true }
      ]
    }
  ]
}
