{
  "title": "Carolina Open Access",
  "description": "The Carolina Digital Repository supports the UNC Open Access Policy. UNC faculty, or their delegates, and other members of the UNC scholarly community should use this form to deposit scholarly work into the UNC Scholarly Works for preservation and access. For help, contact us or view our help pages.",

  "blocks": [
    {
      "id": "authors",
      "type": "section",
      "title": "Author Information",
      "children": [
        {
          "id": "first",
          "type": "text",
          "label": "First Name",
          "required": true
        },
        {
          "id": "last",
          "type": "text",
          "label": "Last Name",
          "required": true
        },
        {
          "id": "department",
          "type": "text",
          "label": "Academic Department",
          "required": true
        },
        {
          "id": "status",
          "type": "select",
          "label": "Status",
          "options": ["Faculty", "Student", "Staff", "Post-Doctoral"]
        }
      ]
    },
    
    {
      "id": "coauthors",
      "type": "section",
      "title": "Co-Authors",
      "repeat": true,
      "children": [
        {
          "id": "coauthor-first",
          "type": "text",
          "label": "First Name",
          "required": true
        },
        {
          "id": "coauthor-last",
          "type": "text",
          "label": "Last Name",
          "required": true
        }
      ]
    },

    {
      "id": "info",
      "type": "section",
      "title": "Article Information",
      "children": [
        {
          "id": "title",
          "type": "text",
          "label": "Title",
          "required": true
        },
        {
          "id": "publication",
          "type": "text",
          "label": "Publication",
          "placeholder": "i.e., Name of journal"
        },
        {
          "id": "issue",
          "type": "text",
          "label": "Issue",
          "placeholder": "e.g., Volume 11, Issue 2"
        },
        {
          "id": "pubdate",
          "type": "text",
          "label": "Publication Date"
        },
        {
          "id": "keywords",
          "type": "text",
          "label": "Keywords",
          "placeholder": "e.g., Cognition, 20th Century British Literature, Ovid, Morphology"
        },
        {
          "id": "version",
          "type": "select",
          "label": "Version",
          "options": [
            "Preprint",
            "Postprint",
            "Publisher"
          ]
        }
      ]
    },
    
    {
      "id": "embargo",
      "type": "date",
      "label": "Embargo Until"
    },
    
    {
      "id": "granting-agency-info",
      "type": "section",
      "title": "Granting Agency Information",
      "children": [
        {
          "id": "granting-agency",
          "type": "text",
          "label": "Granting Agency"
        },
        {
          "id": "additional-funding",
          "type": "text",
          "label": "Additional funding source(s) if applicable"
        }
      ]
    },

    {
      "id": "article",
      "type": "file",
      "label": "Article",
      "required": true
    },

    {
      "id": "files",
      "type": "section",
      "title": "Supplemental Files",
      "children": [
        {
          "id": "supplemental1",
          "type": "file"
        },
        {
          "id": "supplemental2",
          "type": "file"
        },
        {
          "id": "supplemental3",
          "type": "file"
        }
      ]
    }
  ],

  "templates": [
    {
      "block": [
        {
          "type": "element",
          "name": "mods",
          "compact": true,
          "attributes": {
            "xmlns": "http://www.loc.gov/mods/v3"
          },
          "children": [
            {
              "type": "each",
              "source": {
                "type": "path",
                "parts": ["authors"]
              },
              "variable": "author",
              "children": [
                {
                  "type": "element",
                  "name": "name",
                  "attributes": {
                    "type": "personal"
                  },
                  "children": [
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["author", "first"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "namePart",
                          "attributes": {
                            "type": "given"
                          }
                        }
                      ]
                    },
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["author", "last"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "namePart",
                          "attributes": {
                            "type": "family"
                          }
                        }
                      ]
                    },
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["author", "department"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "affiliation"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "role",
                      "children": [
                        {
                          "type": "element",
                          "name": "roleTerm",
                          "attributes": {
                            "type": "text",
                            "authority": "marcrelator"
                          },
                          "children": [
                            {
                              "type": "literal",
                              "value": "Creator"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "arrow",
                  "source": {
                    "type": "path",
                    "parts": ["author", "status"]
                  },
                  "target": [
                    {
                      "type": "element",
                      "name": "note",
                      "attributes": {
                        "type": "admin",
                        "displayLabel": "Author Status"
                      }
                    }
                  ]
                }
              ]
            },
            
            {
              "type": "each",
              "source": {
                "type": "path",
                "parts": ["coauthors"]
              },
              "variable": "coauthor",
              "children": [
                {
                  "type": "element",
                  "name": "name",
                  "attributes": {
                    "type": "personal"
                  },
                  "children": [
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["coauthor", "first"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "namePart",
                          "attributes": {
                            "type": "given"
                          }
                        }
                      ]
                    },
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["coauthor", "last"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "namePart",
                          "attributes": {
                            "type": "family"
                          }
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "role",
                      "children": [
                        {
                          "type": "element",
                          "name": "roleTerm",
                          "attributes": {
                            "type": "text",
                            "authority": "marcrelator"
                          },
                          "children": [
                            {
                              "type": "literal",
                              "value": "Creator"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
        
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["info", "title"]
              },
              "target": [
                {
                  "type": "element",
                  "name": "titleInfo"
                },
                {
                  "type": "element",
                  "name": "title"
                }
              ]
            },
          
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["info", "version"]
              },
              "target": [
                {
                  "type": "element",
                  "name": "originInfo"
                },
                {
                  "type": "element",
                  "name": "edition"
                }
              ]
            },
            
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["info", "pubdate"]
              },
              "target": [
                {
                  "type": "element",
                  "name": "note",
                  "attributes": {
                    "displayLabel": "Publication Date"
                  }
                }
              ]
            },
            
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["info", "keywords"]
              },
              "target": [
                {
                  "type": "element",
                  "name": "note",
                  "attributes": {
                    "displayLabel": "Keywords"
                  }
                }
              ]
            },
          
            {
              "type": "element",
              "name": "relatedItem",
              "attributes": {
                "type": "host"
              },
              "children": [
                {
                  "type": "element",
                  "name": "titleInfo",
                  "children": [
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["info", "publication"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "title"
                        }
                      ]
                    },
                    {
                      "type": "arrow",
                      "source": {
                        "type": "path",
                        "parts": ["info", "issue"]
                      },
                      "target": [
                        {
                          "type": "element",
                          "name": "partName"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            
            {
              "type": "element",
              "name": "name",
              "attributes": {
                "type": "corporate"
              },
              "children": [
                {
                  "type": "arrow",
                  "source": {
                    "type": "path",
                    "parts": ["granting-agency-info", "granting-agency"]
                  },
                  "target": [
                    {
                      "type": "element",
                      "name": "displayForm"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "role",
                  "children": [
                    {
                      "type": "element",
                      "name": "roleTerm",
                      "children": [
                        {
                          "type": "literal",
                          "value": "Funder"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["granting-agency-info", "additional-funding"]
              },
              "target": [
                {
                  "type": "element",
                  "name": "note",
                  "attributes": {
                    "displayLabel": "Additional funding sources"
                  }
                }
              ]
            },
          
            {
              "type": "element",
              "name": "accessCondition",
              "keep": true,
              "children": [
                {
                  "type": "literal",
                  "value": "Open Access, etc."
                }
              ]
            }
          ]
        }
      ]
    },
  
    {
      "block": [
        {
          "type": "element",
          "name": "accessControl",
          "attributes": {
            "xmlns": "http://cdr.unc.edu/definitions/acl"
          },
          "children": [
            {
              "type": "arrow",
              "source": {
                "type": "path",
                "parts": ["embargo"]
              },
              "target": [
                {
                  "type": "attribute",
                  "name": "embargo-until"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
