{
  "destination": "uuid:destination-pid-goes-here",
  
  "title": "Test Form",
  
  "children": [
    {
      "key": "info",
      "type": "section",
      "label": "Article Information",
      "children": [
        {
          "key": "title",
          "type": "text",
          "label": "Title",
          "validations": {
            "presence": true
          }
        },
        {
          "key": "keywords",
          "type": "text",
          "label": "Keywords"
        },
        {
          "key": "pubdate",
          "type": "date",
          "label": "Publication Date"
        },
        {
          "key": "version",
          "type": "select",
          "label": "Version",
          "options": [
            "Preprint",
            "Postprint",
            "Publisher"
          ]
        },
        {
          "key": "genre",
          "type": "select",
          "label": "Genre",
          "options": "genre"
        }
      ]
    },
    {
      "key": "serial",
      "type": "text",
      "label": "Serial Number",
      "validations": {
        "format": { "with": "^[A-Z]{2}-\\d{3}$", "message": "must be a valid serial number (for example, AA-123)", "allowBlank": true }
      }
    },
    {
      "key": "languages",
      "label": "Available Languages",
      "type": "checkboxes",
      "options": "language"
    },
    {
      "key": "publisher",
      "label": "Publisher",
      "type": "text",
      "options": [
        "Crown",
        "Doubleday",
        "Gale",
        "InfoTrac",
        "Knopf",
        "Pandora",
        "Picador",
        "ProQuest",
        "Random House Science",
        "Science Direct",
        "Springer"
      ]
    },
    {
      "key": "location",
      "label": "Publication Location",
      "type": "radio",
      "options": [
        "Germany",
        "Great Britain",
        "United States"
      ]
    },
    {
      "key": "issuance",
      "label": "Issuance",
      "type": "text",
      "options": "issuance"
    },
    {
      "key": "authors",
      "type": "section",
      "label": "Authors",
      "repeat": true,
      "children": [
        {
          "key": "first",
          "type": "text",
          "label": "First Name",
          "validations": {
            "presence": true
          }
        },
        {
          "key": "last",
          "type": "text",
          "label": "Last Name",
          "validations": {
            "presence": true
          }
        }
      ]
    },
    {
      "key": "article",
      "type": "file",
      "label": "Article",
      "validations": {
        "presence": true
      }
    },
    {
      "key": "supplemental",
      "label": "Supplemental Files",
      "type": "section",
      "repeat": true,
      "children": [
        {
          "key": "file",
          "type": "file",
          "label": "File"
        },
        {
          "key": "description",
          "type": "text",
          "label": "Description"
        }
      ]
    },
    {
      "type": "agreement",
      "key": "agreement",
      "name": "Deposit Agreement",
      "uri": "http://example.com/agreement",
      "prompt": "I agree to the terms in the agreement."
    }
  ],

  "templates": [
    {
      "id": "article",
      "type": "xml",
      "template": "element 'mods' xmlns='http://www.loc.gov/mods/v3' @compact=true { info.title -> (element 'titleInfo') (element 'title'); element 'originInfo' { info.pubdate -> element 'dateIssued'; info.version -> element 'edition'; issuance -> element 'issuance'; } element 'originInfo' eventType='publisher' { publisher -> element 'publisher'; element 'place' { location -> element 'placeTerm' type='text'; } } info.keywords -> (element 'note' displayLabel='Keywords'); element 'subject' { genre -> element 'genre'; } element 'language' { each languages as |language| { language.name -> element 'languageTerm' type='text' } } each authors as |author| { element 'name' { author.first -> element 'namePart' type='given'; author.last -> element 'namePart' type='family'; } } }"
    },

    {
      "id": "access",
      "type": "xml",
      "template": "element 'acl:accessControl' xmlns:acl='http://cdr.unc.edu/definitions/acl' acl:published='false';"
    },

    {
      "id": "supplemental",
      "type": "xml",
      "template": "element 'mods' xmlns='http://www.loc.gov/mods/v3' @compact=true { s.description -> element 'abstract'; }"
    }
  ],
  
  "bundle": "item type='Aggregate Work' label=info.title { link rel='http://cdr.unc.edu/definitions/1.0/base-model.xml#defaultWebObject' href='#article'; metadata type='descriptive' { partial 'article'; } metadata type='access-control' { partial 'access'; } item type='File' fragment='article' label=article.name { file { article; } } each supplemental as |s| { if s.file { item type='File' label=s.file.name { metadata { partial 'supplemental'; } file { s.file; } } } } }"
}
